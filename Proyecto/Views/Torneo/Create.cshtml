@model Proyecto.Models.Torneo

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Torneo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model => model.usuarioCreador, new { Value = HttpContext.Current.User.Identity.Name })
        @Html.HiddenFor(model => model.usuarioModificador, new { Value = HttpContext.Current.User.Identity.Name })
        @Html.HiddenFor(model => model.fechaCreacion, new { Value = DateTime.Now.ToString() })
        @Html.HiddenFor(model => model.fechaModificacion, new { Value = DateTime.Now.ToString() })
        <div class="form-group">
            @Html.LabelFor(model => model.codTorneo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.codTorneo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codTorneo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codCompeticion, "Competicion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codCompeticion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.codCompeticion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codTemporada, "Codigo de temporada", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codTemporada", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.codTemporada, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ir a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
