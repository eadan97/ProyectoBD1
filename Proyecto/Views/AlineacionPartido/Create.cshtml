@model Proyecto.Models.AlineacionPartido

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>AlineacionPartido</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.usuarioCreador, new { Value = HttpContext.Current.User.Identity.Name })
    @Html.HiddenFor(model => model.usuarioModificador, new { Value = HttpContext.Current.User.Identity.Name })
    @Html.HiddenFor(model => model.fechaCreacion, new { Value = DateTime.Now.ToString() })
    @Html.HiddenFor(model => model.fechaModificacion, new { Value = DateTime.Now.ToString() })
    <div class="form-group">
        @Html.LabelFor(model => model.codPartido, "Codigo del partido", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("codPartido", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codPartido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.codPersona, "Jugador", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("codPersona", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codPersona, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.codEquipo, "Equipo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("codEquipo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codEquipo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Ir a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
