@model IEnumerable<Proyecto.Models.CambioPartido>

@{
    ViewBag.Title = "Cambios en partido";
}

<h2>Cambios de partido</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Partido.codPartido)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Jugador.FuncionarioDeportivo.Persona.nbrPersona) (Sale)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Jugador1.FuncionarioDeportivo.Persona.nbrPersona) (Entra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.minuto)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.usuarioCreador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usuarioModificador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaModificacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Partido.codPartido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jugador.FuncionarioDeportivo.Persona.nbrPersona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jugador1.FuncionarioDeportivo.Persona.nbrPersona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.minuto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usuarioCreador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usuarioModificador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaCreacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaModificacion)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { item.codPartido, codPersona=item.jugadorSale}) |
            @Html.ActionLink("Detalles", "Details", new { item.codPartido, codPersona = item.jugadorSale }) |
            @Html.ActionLink("Eliminar", "Delete", new { item.codPartido, codPersona = item.jugadorSale })
        </td>
    </tr>
}

</table>
