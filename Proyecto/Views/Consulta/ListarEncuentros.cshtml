@model IEnumerable<Proyecto.Models.Encuentros_Result>

@{
    ViewBag.Title = "Encuentros";
}

<h2>Encuentros entre equipos</h2>

<table class="table">
    <tr>
        <th>
            Equipo 1
        </th>
        <th>
            Equipo 2
        </th>
        <th>
            Fecha
        </th>
        <th>
            Goles del equipo 1
        </th>
        <th>
            Goles del equipo 2
        </th>
        <th>
            Nombre de la competicion
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @($"{item.Equipo_1:N0}") 
            </td>
            <td>
                @($"{item.Equipo_2:N0}") 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @($"{item.Goles_del_equipo_1:N0}") 
            </td>
            <td>
                @($"{item.Goles_del_equipo_2:N0}") 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_de_la_competicion)
            </td>
        </tr>
    }

</table>